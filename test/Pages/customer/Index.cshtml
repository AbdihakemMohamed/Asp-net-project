@page
@model test.Pages.customer.IndexModel
@{
}


 <div class="container">
    
            <center>

                    <h1> BMS</h1>
                    <h3> view Customers</h3>
                    
                    </center>


    @if (Model.successmsg.Length > 0)
                {
           <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.successmsg
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

           </div>
    }
   
             






        <a href="/customer/add_student" class="btn btn-dark" style="width:100px,">add</a>
            <br>
            <br>

    <table id="mytable" class="table table-striped table-bordered">

        <thead>
            <tr class=" bg-secondary text-white">
                <th>ID</th>
                <th>full_Name</th>
                <th>gender</th>
                <th>phone</th>
                <th>address</th>
                <th>Age</th>
                <th>Email</th>
                <th>action</th>
                <th></th>
            </tr>

        </thead>
        <tbody>
            @foreach(var row in Model.customerlist)
            {
                <tr>

                    <td>@row.customer_id</td>
                    <td>@row.full_name</td>
                    <td>@row.gender</td>
                    <td>@row.phone_number</td>
                    <td>@row.address</td>
                    <td>@row.age</td>
                    <td>@row.email</td>
                            <td>
                        <a href="/customer/editcustomer?id=@row.customer_id" class="btn btn-primary btn-sm"> Edit </a>
                                <a href="#"  class="btn btn-success btn-sm"> Delete </a>
                            </td>

                            <td></td>
                </tr>
            }


        </tbody>

        <tfoot>
            <tr class="bg-light text-dark">
            <td colspan="8"></td>

            </tr>


        </tfoot>





    </table>
        </div>
 
<script>
     
    jQuery(document).ready(function ($) {
        $('#mytable').DataTable({
            //"order": [0,asc],
            order: [0, 'desc'],
            mark: true,
            dom: 'Bfrtip',
            lengthMenu: [
                [3, 25, 50, 100, -1],
                ['3 rows', '25 rows', '50 rows', '100 rows', 'Show All']
            ],
            buttons: [
                'pageLength',
                {
                    extend: 'copyHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'excelHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'csvHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'pdfHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'print',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                'colvis'
            ],
            columnDefs: [{
                targets: -1,
                visible: false
            }]
        });
    });
</script>




