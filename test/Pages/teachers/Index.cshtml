@page
@model School_Ms.Pages.teachers.IndexModel
@{
}

<dive class="container">
    <center>

        <h1> School management system</h1>
        <h3> view Teachers</h3>

    </center>

    <a href="/teachers/add_teacher" class="btn btn-dark" style="width:100px,">add</a>
    <br>
    <br>

    <table id="mytable" class="table table-striped table-bordered">

        <thead>
            <tr class=" bg-secondary text-white">
                <th>ID</th>
                <th>fullName</th>
                <th>gender</th>
                <th>Email</th>
                <th>Contact</th>
                <th>Subject</th>
                <th>Address</th>
                <th>Age</th>
                <th>Salary</th>
                <th>Action</th>
            </tr>

        </thead>
        <tbody>
            @foreach(var row in Model.teacherlist)
            {
            
                <tr>

                    <td>@row.id</td>
                    <td>@row.name</td>
                    <td>@row.gender</td>
                    <td>@row.email</td>
                    <td>@row.number</td>
                    <td>@row.subject</td>
                    <td>@row.address</td>
                    <td>@row.age</td>
                    <td>@row.salary</td>
                    <td>edit - Delete</td>
                </tr>
            }


        </tbody>

        <tfoot>
            <tr class="bg-light text-dark">
                <td colspan="9"></td>
            </tr>


        </tfoot>





    </table>

</dive>
<script>
    // Use jQuery in noConflict mode
    jQuery(document).ready(function ($) {
        $('#mytable').DataTable({
            //"order": [0,asc],
            order: [0, 'desc'],
            mark: true,
            dom: 'Bfrtip',
            lengthMenu: [
                [3, 25, 50, 100, -1],
                ['3 rows', '25 rows', '50 rows', '100 rows', 'Show All']
            ],
            buttons: [
                'pageLength',
                {
                    extend: 'copyHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'excelHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'csvHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'pdfHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'print',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                'colvis'
            ],
            columnDefs: [{
                targets: -1,
                visible: false
            }]
        });
    });
</script>





