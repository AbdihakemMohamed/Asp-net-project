@page
@model School_Ms.Pages.bikes.IndexModel
@{

}






<div class="container">

    <center>

        <h1> BMS</h1>
        <h3> view Bikes</h3>

    </center>

    @if (Model.successmsg.Length > 0)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.successmsg
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

        </div>
    }




    <a href="/bikes/add_bikes" class="btn btn-dark" style="width:100px,">add</a>
    <br>
    <br>

    <table id="mytable" class="table table-striped table-bordered">

        <thead>
            <tr class=" bg-secondary text-white">
                <th>ID</th>
                <th>Model</th>
                <th>Type</th>
                <th>Status</th>
                <th>Location</th>
                <th>action</th>
                <th></th>
                
            </tr>

        </thead>
        <tbody>
            @foreach (var row in Model.bikeslist)
            {
                <tr>

                    <td>#@row.BikeID</td>
                    <td>@row.Model</td>
                    <td>@row.Type</td>
                    <td>@row.Status</td>
                    <td>@row.Location</td>
                    <td>
                        <a href="/bikes/edit_bike?id=@row.BikeID" class="btn btn-primary btn-sm"> Edit </a>
                        <a href="#" onclick="confirmDelete()" class="btn btn-success btn-sm"> Delete </a>
                    </td>
                    <td></td>
                    
                </tr>
            }


        </tbody>

        <tfoot>
            <tr class="bg-light text-dark">
                <td colspan="6"></td>

            </tr>


        </tfoot>





    </table>
</div>

<script>

    jQuery(document).ready(function ($) {
        $('#mytable').DataTable({
            //"order": [0,asc],
            order: [0, 'desc'],
            mark: true,
            dom: 'Bfrtip',
            lengthMenu: [
                [3, 25, 50, 100, -1],
                ['3 rows', '25 rows', '50 rows', '100 rows', 'Show All']
            ],
            buttons: [
                'pageLength',
                {
                    extend: 'copyHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'excelHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'csvHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'pdfHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'print',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                'colvis'
            ],
            columnDefs: [{
                targets: -1,
                visible: false
            }]
        });
    });
</script>
